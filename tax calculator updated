#include <stdio.h>

int main() {
    float income;
//   float tax=0;
    
      
      printf("enter your income\n");
      scanf("%f",&income);
    
    
      if(income< 250000 ){
          
            printf("u dont have to pay tax\n");
      }
      
     else  if((income >=250000)&& (income<=500000)){
          
        printf("you have to pay 5 percent tax which is = %f\n",(income-250000)/100*5);
      }
      
      else if(income<=1000000 && income>=600000){
          
            printf("you have to pay 20 percent tax which is = %f\n", (income-250000)/100*20);
      }
      
     else if(income>1000000){
          
            printf("you have to pay 30 percent tax which is = %f\n", (income-250000)/100*30);
      }
     
    return 0;
}
