// by using loops only;
#include <stdio.h>

int main() {
    int n;
    
    printf("enter the value of n:\n");
    scanf("%d",&n);
    
    for(int i=0;i<n;i++){
        
        for(int j=0;j<=i;j++){             //if we put n in the postion of i we get same number of star in every line
            
            printf("*");
            
        }
        printf("\n");
        
    }
    
    return 0;
}

